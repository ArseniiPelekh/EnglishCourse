@model ChangeArticleModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Статті";
}

@{
    foreach (Article article in Model.Articles)
    {
        <div class="border rounded p-3 mb-4 form-article">
            <div>
                <div class="form-group">
                    <label>Html текс</label>
                    <textarea class="form-control" rows="3">@article.TextHtml</textarea>
                </div>
                <div class="form-group">
                    <label>Тип статті: @article.ArticleType.Name</label>
                </div>

                <div class="text-right mt-3">
                    <label>Дата створення: <b>@article.DateTime</b></label>
                    <br />
                </div>
            </div>
        </div>
    }
}
