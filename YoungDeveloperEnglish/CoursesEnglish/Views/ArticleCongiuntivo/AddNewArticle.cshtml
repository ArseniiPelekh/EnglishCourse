@model AddArticleModel

@{
    Layout = "_LayoutAdmin";
    ViewData["Title"] = "Додати статтю";
}

<div class="border rounded p-3 mb-4 form-article">
    <form asp-action="AddNewArticle" asp-controller="ArticleCongiuntivo">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="@Model.TextHtml" va>Html текс</label>
            <textarea asp-for="@Model.TextHtml" class="form-control" rows="3"></textarea>
            <span asp-validation-for="@Model.TextHtml" class="text-danger"></span>
        </div>
        <div class="form-group">

            <label asp-for="@Model.FKArticleType">Виберіть тип статті</label>
            <select asp-for="@Model.FKArticleType" class="form-control">
                @foreach (var type in Model.ArticleTypes)
                {
                    <option value=@type.Id>@type.Name</option>
                }
            </select>
            <span asp-validation-for="@Model.FKArticleType" class="text-danger"></span>

        </div>

        <div class="text-right mt-3">
            <br />
            <input class="btn btn-light" type="submit" value="Добавить">
        </div>
    </form>
</div>

