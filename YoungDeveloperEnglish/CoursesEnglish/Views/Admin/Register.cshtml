@model YoungDeveloperEnglish.ViewModels.RegisterModel

<div class="text-center">
    <div class="div-signin">
        <form asp-action="Register" asp-controller="Admin" method="post" asp-anti-forgery="true" class="form-signin">
            <img class="mb-4" src="~/png/LogImgAdmin.png" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Уведіть дані</h1>

            <div class="form-group">
                <label asp-for="Login" class="sr-only">Login</label>
                <input type="text" asp-for="Login" class="form-control" placeholder="Логін">
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="sr-only">Password</label>
                <input asp-for="Password" class="form-control" type="password" placeholder="Пароль">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfigurePassword" class="sr-only"></label>
                <input asp-for="ConfigurePassword" class="form-control" type="password" placeholder="Повторите пароль" />
                <span asp-validation-for="ConfigurePassword" class="text-danger"></span>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Створити</button>
        </form>
    </div>
</div>

