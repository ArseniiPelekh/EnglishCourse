@model LoginModel

<div class="text-center">
    <div class="div-signin">
        <form asp-action="Login" asp-controller="Admin" asp-anti-forgery="true" class="form-signin">
            <img class="mb-4" src="~/png/LogImgAdmin.png" width="72" height="72">
            <h1 class="h3 mb-3 font-weight-normal">Уведіть дані</h1>

            <label asp-for="Login" class="sr-only">Login</label>
            <input type="text" asp-for="Login" class="form-control" placeholder="Логін" required="" autofocus="">

            <label asp-for="Password" class="sr-only">Password</label>
            <input type="password" asp-for="Password" class="form-control" placeholder="Пароль" required="">

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" value="remember-me"> Запомнити мене
                </label>
            </div>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Увійти</button>
        </form>
    </div>
</div>